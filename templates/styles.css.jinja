.is_hidden {
    visibility : hidden;
    max-height : 0;
}

.hidden_column {
    display:none;
    visibility:hidden;
}

.margin_auto {
    margin-left: auto;
    margin-right : auto;
}

@font-face {
    font-family: "CardenioModern";
    src: url("https://raw.githubusercontent.com/NoahBolohan/wingspan-utilities/master/static/cardenio_modern_font/CardenioModern-Regular.otf") format("opentype");

}

.fonttest {
    font-family: "CardenioModern";
}

html *
{
   font-size: 15pt;
   color: #000;
   font-family: "CardenioModern" !important;
}

body {
    margin:0;
    padding:0;

    background-image: url("{{ background_image_url }}");

    min-height: 99svh;
    background-attachment: fixed;
    background-position: center top;
    background-repeat: no-repeat;
    background-size: cover;
}

table td {
    position: relative;
  }
  
  table td input {
    position: absolute;
    display: block;
    top:0;
    left:0;
    margin: 0;
    height: 100%;
    width: 100%;
    border: none;
    padding: 10px;
    box-sizing: border-box;
  }

table {
    table-layout: fixed;
    width: 100%;
}

.input-vertical {
    writing-mode: vertical-lr;
    text-orientation: sideways;
    transform: rotate(180deg);
  }

.nav-button {
    font-size: 18pt;
}

h1 {
    font-size: 25pt;
}

h2 {
    font-size: 20pt;
}

.centered-text {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    border: none;
}

input::-webkit-input-placeholder {
    position: relative;
    right: 15px;
}

.rowspan-vertical {
    writing-mode: sideways-lr;
    text-align: center;
}